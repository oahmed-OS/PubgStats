@page
@model IndexModel
@{
    ViewData["Title"] = "PubgStats";
}


<div class="row">
    <div class="playerFormContainer">
        <div class="playerForm">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "searchPlayer", @class = "inheritSize" }))
            {

                <div class="form-horizontal inheritSize">
                    <input type="text" placeholder="Search player" onfocus="this.placeholder=''" onblur="this.placeholder='Search Player...'"
                           autocomplete="off" class="inheritSize playerInput" />
                </div>
            }
        </div>
    </div>
</div>

<div class="row" >

    <div class="statsGridContainer">
        <div class="row statsRow" data-bind="with: Player">
            <!--SOLO FPP-->
            <div class="statsCard col-md-4" >
                <!-- ko if: $data.soloFPP-->
                <div class="statsField" data-bind="text: $data.soloFPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.soloFPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.soloFPP.WinRatio"></div>
                <!-- /ko -->
            </div>
            <!--DUO FPP-->
            <div class="statsCard col-md-4">
                <!-- ko if: $data.duoFPP-->
                <div class="statsField" data-bind="text: $data.duoFPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.duoFPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.duoFPP.WinRatio"></div>
                <!-- /ko -->
            </div>
            <!--SQUAD FPP-->
            <div class="statsCard col-md-4">
                <!-- ko if: $data.squadFPP-->
                <div class="statsField" data-bind="text: $data.squadFPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.squadFPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.squadFPP.WinRatio"></div>
                <!-- /ko -->
            </div>
        </div>
        <div class="row statsRow" data-bind="with: Player">
            <!--SOLO TPP-->
            <div class="statsCard col-md-4">
                <!-- ko if: $data.soloTPP-->
                <div class="statsField" data-bind="text: $data.soloTPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.soloTPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.soloTPP.WinRatio"></div>
                <!-- /ko -->
            </div>
            <!--DUO TPP-->
            <div class="statsCard col-md-4">
                <!-- ko if: $data.duoTPP-->
                <div class="statsField" data-bind="text: $data.soloFPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.soloFPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.soloFPP.WinRatio"></div>
                <!-- /ko -->
            </div>
            <!--SQUAD TPP-->
            <div class="statsCard col-md-4">
                <!-- ko if: $data.squadTPP-->
                <div class="statsField" data-bind="text: $data.squadTPP.KillDeath"></div>
                <div class="statsField" data-bind="text: $data.squadTPP.AverageDamage"></div>
                <div class="statsField" data-bind="text: $data.squadTPP.WinRatio"></div>
                <!-- /ko -->
            </div>
        </div>
    </div>
</div>
